{
  "version": 2,
  "name": "chat-app-frontend",
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "@vite_api_url",
    "VITE_APP_NAME": "@vite_app_name"
  },
  "build": {
    "env": {
      "VITE_API_URL": "@vite_api_url",
      "VITE_APP_NAME": "@vite_app_name"
    }
  }
}